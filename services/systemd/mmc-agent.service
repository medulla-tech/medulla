[Unit]
Description=Machines Management Console
After=smbd.service slapd.service ejabberd.service medulla-master-substitute-master.service
Requires=ejabberd.service medulla-master-substitute-master.service
ConditionPathExists=/etc/mmc/plugins/base.ini.local

[Service]
PIDFile=/var/run/mmc-agent.pid
#User=medulla
#Group=medulla
Type=forking
ExecStart=/usr/sbin/mmc-agent
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
