#!/usr/bin/make -f

PACKAGE=mmc-core
DESTDIR=$(CURDIR)/debian/tmp

DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

config.status: configure
	dh_testdir
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif
	./configure --host=$(DEB_HOST_GNU_TYPE) \
		--build=$(DEB_BUILD_GNU_TYPE) \
		--prefix=/usr \
		--disable-python-check \
		--disable-silent-rules \
		--sysconfdir=/etc \
		--localstatedir=/var

build: build-indep
build-arch:
build-indep: config.status
	dh_testdir
	$(MAKE) CFLAGS="$(CFLAGS)"
	touch $@

clean:
	dh_testdir
	dh_testroot
	[ ! -f Makefile ] || $(MAKE) distclean
	rm -rf debian/build
	rm -f config.sub config.guess build-indep config.status config.log
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) install DESTDIR=$(DESTDIR)
	rm -f $(DESTDIR)/etc/init.d/mmc-agent
	rm -f $(DESTDIR)/usr/share/mmc/jsframework/MIT-LICENSE
	find $(DESTDIR) -type f -name '*.pyc' -delete
	find $(DESTDIR) -type f -name '*.pyo' -delete

binary-arch: build install
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_install --sourcedir=$(DESTDIR) --fail-missing
	dh_pysupport
	dh_fixperms -X/etc/mmc
	dh_installchangelogs
	dh_installdocs
	dh_installinit
	dh_strip
	dh_link
	dh_compress
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
