[main]
host = 127.0.0.1
port = 7080
# Credentials for HTTP basic authentication
login = mmc
password = s3cr3t
# RPC Session timeout in seconds.
# If unset default to Twisted hardcoded 900 seconds.
#sessiontimeout = 900
# Multi-threading support (enabled by default)
#multithreading = 1
#maxthreads = 20
# SSL support
enablessl = 1
localcert = @sysconfdir@/mmc/agent/keys/localcert.pem
cacert = @sysconfdir@/mmc/agent/keys/cacert.pem
# Certificate check
# verifypeer = 0
# Path to the file containing the Certificate Authority (PEM format)
# cacert =
# Path to the file containing the local key and certificate (PEM format)
# localcert =

[submaster]
# client
# url pour localhost ::1 , 127.0.0.1
# host = 127.0.0.1
host = ::1
# port 57041 pour ipv6
# port 57040 pour ipv4
port = 57041
# ip_format is 57041ipv' or ipv6
ip_format = ipv6
# allowed_token definie tocken communication
allowed_token = 4O&vHYKG3Cqq3RCUJu!vnQu+dBGwDkpZ
# verify server certificat
check_hostname = True

[daemon]
user = root
group = root
umask = 0077
pidfile= @localstatedir@/run/mmc-agent.pid
# user = mmc
# group = mmc
# umask = 0007
# pidfile= @localstatedir@/run/mmc-agent.pid

[loggers]
keys=root,audit

[handlers]
keys=hand01,hand02,hand03

[formatters]
keys=form01,form02

[logger_root]
level=NOTSET
handlers=hand01

[logger_audit]
level=NOTSET
qualname=audit
propagate=0
# Set handlers=hand03 to
# activate audit syslog logging
handlers=

[handler_hand01]
class=handlers.TimedRotatingFileHandler
level=INFO
formatter=form01
args=("@localstatedir@/log/mmc/mmc-agent.log",'midnight', 1, 7)

[handler_hand02]
class=StreamHandler
level=DEBUG
args=(sys.stderr,)

[handler_hand03]
class=handlers.SysLogHandler
level=INFO
formatter=form02
args=(('localhost', 514), handlers.SysLogHandler.LOG_DAEMON)

[formatter_form01]
format=%(asctime)s #%(thread)d %(levelname)s %(message)s

[formatter_form02]
format=mmc-agent[%(process)s]: %(message)s
